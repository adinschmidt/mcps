{
  "name": "fastmail-mcp",
  "version": "0.1.0",
  "description": "MCP server for Fastmail mail (JMAP) + calendar (CalDAV) + contacts (CardDAV)",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "fastmail-mcp": "src/index.ts"
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "bun build src/index.ts --outdir dist --target node --format esm",
    "clean": "rm -rf dist"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.3.0"
  },
  "packageManager": "bun@1.3.5",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "tsdav": "^2.1.4",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.12.0",
    "typescript": "^5.5.4"
  }
}
